(ocamllex lexer)
(ocamlyacc parser)

(rule
 (targets ext.ml)
 (deps    ext.cppo.ml)
 (action  (run %{bin:cppo} -D SUNDIALS %{deps} -o %{targets})))

(rule
 (targets extast.ml)
 (deps    extast.cppo.ml)
 (action  (run %{bin:cppo} -D SUNDIALS %{deps} -o %{targets})))

(rule
 (targets extpprint.ml)
 (deps    extpprint.cppo.ml)
 (action  (run %{bin:cppo} -D SUNDIALS %{deps} -o %{targets})))

(executable
 (name boot)
 (libraries sundialsml)
)
